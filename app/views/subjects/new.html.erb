<form accept-charset="UTF-8" action="/subjects" method="post">
  <div style="margin:0;padding:0">
    <input name="utf8" type="hidden" value="&#x2713;" />
  </div>
  <%= form_for @subject, :url => { :action => "create"}, :html => { :class => "subject_form"} do |f| %>
    <%= f.text_field :title %>
    <%= f.submit "Create" %>
  <% end %>
</form>