<% if @note.errors.any? %>
  <div class="errors">
    <h3>Please fix the following errors</h3>
    <ul>
      <% @note.errors.full_messages.each do |e| %>
        <li><%= e %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<p>
  <%= button_to "Delete This Note", note_path(@note.id), :method => :delete, :class => "btn" %>
</p>

<form action="" method="post"> 
  <p>
    <input type="submit" class="btn" value="Save This Note"></input>
  </p>
  
  <div id="redactor_content">
    <%= text_area_tag :title, @note.title, :class => "redactor_title", :rows => 1, :cols => 60 %></br>
    <%= text_area_tag :"notes[content]", @note.content, :class => "redactor", :rows => 200, :cols => 150 %>
  </div>
</form>



