<form accept-charset="UTF-8" action="/notes" method="post">
  <div style="margin:0;padding:0">
    <input name="utf8" type="hidden" value="&#x2713;" />
  </div>
  <%= form_for @note, :url => { :action => "create"}, :html => { :class => "note_form"} do |f| %>
    <%= f.text_field :title %></br>
    <%= f.text_area :content, :size => "60x12" %>
    <%= f.submit "Create Note" %>
  <% end %>
</form>

<form>
<p>
    <textarea name="description" id="id_description" 
    class="rte-zone">jQuery RTE</textarea>
</p>
<p>
    <textarea name="description2" id="id_description2" 
    class="rte-zone">jQuery RTE 2</textarea>
</p>
<input type="submit" />
</form>
<script type="text/javascript" src="jquery.js"></script>
<script type="text/javascript" src="jquery.rte.js"></script>
<script type="text/javascript">
    $('.rte-zone').rte("css url", "toolbox images url");
</script>
</form>